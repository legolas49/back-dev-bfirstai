# Variables d'environnement - Développement
# Copier ce fichier vers .env et adapter les valeurs

# Application
NODE_ENV=development
PORT=3000
PUBLIC_API_BASE_URL=https://api-dev.bfirst-ai.com

# Base de données MongoDB
MONGO_URI=mongodb://mongodb.mongodb.svc.cluster.local:27017/backoffice_dev
MONGO_PRICING_URI=mongodb://mongodb.mongodb.svc.cluster.local:27017/pricing_dev

# Pour développement local (optionnel)
# MONGO_URI=mongodb://localhost:27017/backoffice_dev
# MONGO_PRICING_URI=mongodb://localhost:27017/pricing_dev

# Authentification
JWT_SECRET=your-jwt-secret-dev-change-me
JWT_EXPIRES_IN=7d
OAUTH_CLIENT_ID=your-oauth-client-id-dev
OAUTH_CLIENT_SECRET=your-oauth-client-secret-dev

# Services externes
REDIS_URL=redis://redis.redis.svc.cluster.local:6379

# Email/SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@bfirst-ai.com
SMTP_PASS=your-smtp-password
SMTP_SECURE=false

# Logging
LOG_LEVEL=debug

# Feature flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_METRICS=true

# URLs externes
PUBLIC_FRONTEND_URL=https://backoffice-dev.bfirst-ai.com
PUBLIC_API_URL=https://api-dev.bfirst-ai.com
